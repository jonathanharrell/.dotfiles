# Drupal
alias drupal=vendor/bin/drupal
alias drupal-clear-all="drush @sites -y cr all"

# Acquia DevDesktop
alias devdesktop-sloan='export PHP_ID=php7_0; export PATH="/Applications/DevDesktop/$PHP_ID/bin:/Applications/DevDesktop/mysql/bin:/Applications/DevDesktop/tools:$PATH" && cd "/Users/jonathanharrell/Sites/devdesktop/sloanvalve-dev/docroot"'

# Config files
alias hosts="subl /etc/hosts"
alias zshrc="subl ~/.zshrc"

# Generic terminal
alias c="clear"
alias e="exit"
alias l="ls -la -F"

# Project aliases
alias arktura="cd ~/Sites/arktura/wp-content/themes/arktura"
alias cja="cd ~/Sites/cjarellano/wp-content/themes/cjarellano"
alias jh="cd ~/Sites/jonathanharrell/wp-content/themes/jonathanharrell"
alias sites="cd ~/Sites"
alias sloan="cd ~/Sites/devdesktop/sloanvalve-dev/docroot/themes/sloan"
alias whq="cd ~/Sites/whq-v2"
alias pitchbook-migrate="composer dump-autoload && docker-compose exec app php artisan migrate:fresh --seed"